.container {
  display: flex;
  padding: 0px 0px 0px 0px;
  background-color: #f5f5f5;
}
.sel-view {
  background-color: #f5f5f5;
}
.selLine {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 50px;
  align-items: flex-start;
  background-color: white;
  box-shadow: 0px 2px 4px 0px 
		rgba(24, 99, 97, 0.1);
}

.button {
  display: flex;
  flex-direction: row;
  width: 25%;
  height: 40px;
  margin-top: 5px;
  align-items: flex-start;
}

.listView {
  display: list-item;
  flex-direction: column;
  width: 100%;
}
