/* component/textlist/textlist.wxss */
:host{
  display: block;
  border-bottom: 1px solid #e9eaec;
}
.list{
  display: flex;
  padding:5px 10px;
  width: 100vw;
  flex-direction: column;
  
}
.top-line{
  display: flex;
  padding:5px 0px;
  width: 100vw;
  height: 12px;
  flex-direction: row;
}
.icon{
  display: flex;
  width: 12pt;
  height: 12pt;
  padding: 5px;
  margin-top: 10px;
}

.title{
  position: relative;
  font-size: 12px;
  height: 12px;
  color: #b2b2b2;
}

.detail{
  display: flex;
  font-size: 12px;
  padding: 5px 0px;
  color: #000000;
}
.detail-input {
  display: inline-block;
  width: 100vw;
  height: 80px;
  font-size: 17px;
  margin-left: 8px;
  color: #7a7a7a;
}