/* component/teacherlistcell/teacherlistcell.wxss */
:host {
  display: block;
}
.list-group {
  display: flex;
  padding:10px 10px;
  margin: 10px 10px 0px 10px;
  background-color: white;
  box-shadow: 2px 2px 4px 0px rgba(21, 85, 83, 0.1);
}
.img {
   width:80px;
   height: 80px;
   margin-top: 25px;
   align-content: center;
}
.list-left{
  flex:0 0 100px;
  width: 100px;
  align-items: center;
}
.list-right{
  flex-direction: column;
}
.basic-info {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.name {
  font-size:14px;
  color: #3a3a3a;
  padding-left: 10px;
}
.sex {
  width: 16px;
  height: 16px;
  margin-left: 10px;
}
.info {
  display: flex;
  padding:0px 10px;
}
.info-cell {
  display: flex;
  width: 50%;
  border-bottom: 2px solid rgba(21, 85, 83, 0.1);
  flex-direction: row;
  padding: 10px 0px;
}
.icon {
  display: flex;
  width: 16px;
  height: 16px;
}
.info-title {
  display: flex;
  font-size:12px;
  margin-left: 10px;
}

.detail-list {
  display: flex;
  padding:0px 10px;
  flex-direction: column;
}
.detail-cell {
  width: 100%;
  
  border-bottom: 2px solid rgba(21, 85, 83, 0.1);
}
.detail-cell2 {
  display: flex;
  flex-direction: column;
  padding: 5px 10px;
  width: 100%;
}
.detail {
  display: inline-block;
  width: 60vw;
  font-size:12px;
  padding: 10px 0px;
  color:#000000;
}
.title {
  display: inline-block;
  width: 30vw;
  font-size:12px;
  color:#b2b2b2;
}
  