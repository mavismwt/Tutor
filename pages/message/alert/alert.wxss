/* pages/message/alert/alert.wxss */
.section {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
  padding: 10px;
}
.section__title {
  padding:0px 10px 10px 10px;
  font-size:17px;
}
.icon {
  width: 15px;
  height: 10px;
  margin-top: 5px;
}
.text {
  display: inline-block;
  width: 156px;
  font-size: 16px;
  color: #84878f;
  text-align: center;
}
.select-button {
  margin-left: 10px;
  width: 180px;
  padding: 7px 5px;
  font-size: 17px;
  color: #84878f;
  background-color: #f5f5f5;
  border: 1px solid #e9eaec;
  border-radius: 5px;
}

.title {
  margin-left: 10px;
  padding: 0px 3px;
  font-size: 17px;
}
.input {
  display: inline-block;
  background-color: #f5f5f5;
  font-size: 17px;
  padding: 8px 5px;
  margin: 5px 10px;
  border-radius: 5px;
}