/* pages/mine/auth/auth.wxss */
.container {
  display: flex;
  padding: 0px 0px 0px 0px;
}
.cover-view {
  position: relative;
  top: 0%;
  height: 100vh;
  width: 100vw;
  display: flex;
  background-color: white;
  flex-direction: column;
  align-items: center;
  background-color: white;
  opacity:0.5;
}
.select-view {
  margin-top: 40vw;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.select {
  display: flex;
  flex-direction: column;
  width: 120px;
}
.icon {
  width: 80px;
  height: 80px;
  padding: 20px;
}
.title {
  width: 120px;
  height: 16px;
  font-size: 16px;
  text-align: center;
}
.more-info {
  margin-top: 40px;
  width: 200px;
  font-size: 14px;
  color: black;
}