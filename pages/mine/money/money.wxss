/* pages/mine/money/money.wxss */
.listView {
  display: list-item;
  flex-direction: column;
  width: 100%;
}
.top-view {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 200px;
  background-color: #3cdede;
  padding: 10px;
}
.left-view {
  display: flex;
  flex-direction: column;
  width: 50%;
  height: 100%;
  justify-items: center;
  align-items: center;
  border-right: 1px solid #fff;
}
.right-view {
  display: flex;
  flex-direction: column;
  width: 50%;
  height: 100%;
  justify-items: center;
  align-items: center;
}
.title {
  color: #fff;
  padding: 10px;
}
.money {
  color: #fff;
  font-size: 48px;
  font-weight: 700;
  padding: 10px;
}
.button {
  color: #fff;
  background-color: rgb(13,166,166);
  width: 60%;
}
button::after {
  border: none
}