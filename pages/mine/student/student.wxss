/* pages/mine/studentAuth/studentAuth.wxss */
.container {
  display: flex;
  padding: 0px;
  flex-direction: column;
}
.title {
  display: flex;
  font-size: 17px;
  color: #b2b2b2;
  padding: 23px 0px 10px 20px;
}

.card-view {
  display: flex;
  flex-direction: row;
  margin: 30px 0px 0px 40px;
}
.online-view {
  display: flex;
  flex-direction: row;
  margin: 10px 0px 0px 40px;
}
.detail {
  display: flex;
  width: 100%;
  height: 300px;
  flex-direction: column;
}
.online-auth {
  display: flex;
  margin: 50px 20px;
  flex-direction: column;
  align-items: center;
}
.input {
  height: 30px;
  width: 100vw-40px;
  margin-top: 50px;
  border: 1px solid #ececec;
}
.image {
  margin: 50px;
}
.confirm-line {
  display: flex;
  align-items: center;
  flex-direction: column;
}
.confirm {
  font-size: 16px;
  width: 40vw;
  height: 30px;
  padding-top: 10px;
  text-align: center;
  border-radius: 20px;
  margin-top: 40px;
  background-color:#3cdede;
  color: white;
}
.pstitle{
  font-size: 14px;
  color: #b2b2b2;
  align-content: center;
}
.subtitle {
  font-size: 17px;
}
.help {
  margin: 5px 0px 0px 5px;
  height: 18px;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  border-radius: 2px;
  background-color: gray;
  color: white;
}
