<view>
<navigationBar id="navigationBar" title="学生列表"></navigationBar>    
  <view class="container">
    <view class="selLine" style="position:fixed">
      <view class='button'>
        <i-collapse-item title="家教类型" name="name" bindtap="showSelect" data-type='type' style='margin-left:5px;'>
        </i-collapse-item>
      </view>
      <view class='button'>
        <i-collapse-item title="科目" name="name" bindtap="showSelect" data-type='object' style='margin-left:5px;'>
        </i-collapse-item>
      </view>
      <view class='button'>
        <i-collapse-item title="年级" name="name" bindtap="showSelect" data-type='grade' style='margin-left:5px;'>
        </i-collapse-item>
      </view>
      <view class='button'>
        <i-collapse-item title="性别要求" name="name" bindtap="showSelect" data-type='sex' style='margin-left:5px;'>
        </i-collapse-item>
      </view>
    </view>
    <view style="margin-top:50px;margin-bottom:60px;">
    <cover-view  class='cover-view' hidden='{{isHidden}}' catchtap='changeStatus' z-index='100'>
    <cover-view class='objects' style="flex-direction:row;">
      <cover-view class='object-item' wx:for="{{selectArray}}" wx:key="unique" style="background-color:{{item.isSelected?'#3cdede':''}};color:{{item.isSelected?'#fff':'#3cdede'}}" catchtap='select' data-index='{{index}}' data-status='{{item.isSelected}}'>{{item.object}}
      </cover-view>
    </cover-view>
    <cover-view class='confirm'>确定</cover-view>
  </cover-view>
      <studentList id="studentList"  wx:for="{{studentArray}}" wx:key="unique"
      name = "{{item.name}}"
      img = "{{item.img}}"
      price="{{item.price}}"
      grade="{{item.grade}}"
      object="{{item.object}}"
      time="{{item.time}}"
      location="{{item.location}}"
      sex="{{item.sex}}"
      isLongTerm="{{item.isLongTerm}}"
      number="{{item.number}}"
      perTime="{{item.perTime}}"
      bindtap='onClick'
      id="{{index}}"
      z-index='0'>
      </studentList>
    </view>
    <tabbar tabbar="{{tabbar}}"></tabbar>
  </view>
</view>