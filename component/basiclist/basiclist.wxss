/* component/settinglist/settinglist.wxss */
:host{
  display: block;
  border-bottom: 1px solid #e9eaec;
}
.list{
  display: flex;
  padding:5px 10px;
  width: 100vw;
  flex-direction: column;
  
}
.top-line{
  display: flex;
  padding:5px 0px;
  width: 100vw;
  height: 40px;
  flex-direction: row;
}
.icon{
  display: flex;
  width: 20px;
  height: 20px;
  margin-left: 10px;
  margin-top: 12px;
}

.title{
  position: relative;
  font-size: 17px;
  height: 16px;
  margin-left: 8px;
  margin-top: 10px;
}

.detail{
  display: flex;
  font-size: 17px;
  margin-left: 8px;
  color: #7a7a7a;
}
.detail-input {
  display: inline-block;
  width: 100vw;
  height: 80px;
  font-size: 17px;
  margin-left: 8px;
  color: #495060;
}
.status {
  position: fixed;
  font-size: 14px;
  padding: 5px 20px;
  margin-top: 7px;
  right: 20px;
  color: #fff;
  border-radius: 5px;
}