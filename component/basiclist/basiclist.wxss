/* component/settinglist/settinglist.wxss */
:host{
  display: block;
  border-bottom: 1px solid #e0e0e0;
}
.list{
  display: flex;
  padding:5px 10px;
  width: 100vw;
  flex-direction: column;
  
}
.top-line{
  display: flex;
  padding:5px 10px;
  width: 100vw;
  height: 40px;
  flex-direction: row;
}
.icon{
  display: flex;
  width: 30px;
  height: 30px;
  margin-left: 12px;
  padding: 5px;
}

.title{
  display: flex;
  font-size: 16px;
  height: 16px;
  margin-left: 8px;
  margin-top: 10px;
}

.detail{
  display: flex;
  font-size: 14px;
  margin-left: 8px;
  margin-top: 10px;
  color: #7a7a7a;
}