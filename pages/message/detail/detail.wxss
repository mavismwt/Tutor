/* pages/message/detail/detail.wxss */
.container {
  display: flex;
  position:absolute;
  overflow-x:hidden;
  min-height:88%;
  width:100%;
  flex-direction: column;
  align-items: center;
  padding: 0px 0px 10px 0px;
  background-color: #f5f5f5;
}
.container.IPX {
  display: flex;
  overflow-x:hidden;
  min-height:88%;
  width:100%;
  flex-direction: column;
  align-items: center;
  padding-bottom: 68rpx;
  background-color: #f5f5f5;
}
.swiper {
  display: flex;
  position: relative;
  width: 100vw;
  height: 82vh;
  top: 40px;
  bottom: 0px;
  z-index: 0;
}
 
.swiper-con {
  padding: 80rpx 0;
}

.top-view {
  position: fixed;
  top: 0px;
  left: 0px;
  right:0px;
  height: 300px;
  width: 100vw;
  padding:10px;
  background-color: #fff;
  margin-top:10px; 
}
.top-view.IPX {
  position: fixed;
  top: 30px;
  left: 0px;
  right:0px;
  height: 300px;
  width: 100vw;
  padding:10px;
  background-color: #fff;
}
.info-view {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100px;
  border-bottom: 1px solid #f5f5f5;
}
.info-view2 {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100px;
  border-bottom: 1px solid #f5f5f5;
}

.basic-info {
  display: flex;
  flex-direction: row;
  margin:10px;
  font-size: 16px;
}
.more-info {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 10px;
  border-bottom: 1px solid #f5f5f5;
}
.edit-button0 {
  display: flex;
  position: fixed;
  right: 140px;
  width: 100px;
  height: 40px;
  background-color: #a9a9a9;
  margin-top: 14px;
  border-radius: 8px;
  align-items: center;
  justify-content: center;
  color:#fff;
  font-size: 17px;
  align-content: center;
}
.edit-button1 {
  display: flex;
  position: fixed;
  right: 20px;
  width: 100px;
  height: 40px;
  background-color: #3cdede;
  margin-top: 14px;
  border-radius: 8px;
  align-items: center;
  justify-content: center;
  color:#fff;
  font-size: 17px;
}
.button {
  width: 40%;
  height: 36vw;
  color: #fff;
  font-size: 24px;
  padding-top: 11vw;
}
.button.alert {
  width: 40%;
  height: 36vw;
  color: #fff;
  font-size: 24px;
  line-height: 30px;
  padding-top: 8vw;
  padding-left: 0px;
  padding-right: 0px; 
}
.button::after {
  border: none;
}

.message{
  position: fixed;
  bottom:0;
  width: 100%;
}
.message.IPX{
  position: fixed;
  bottom:60rpx;
  width: 100%;
}
.sendMessage{
  display: block;
  height: 80rpx;
  padding: 10rpx 10rpx; 
  background-color: #fff; 
  border-top: 2rpx solid #eee;
  border-bottom: 2rpx solid #eee; 
  z-index:3;  
}
.sendMessage input{
   float:left;
   width: 70%;
   height: 100%;
   line-height: 80rpx;
   border-bottom: 1rpx solid #ccc;
   padding:0 10rpx; 
   font-size: 35rpx;
   color: #666;
}
.sendMessage view{
  display: inline-block; 
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx; 
  font-size: 60rpx; 
  text-align: center;
  color: #999;
  border: 1rpx solid #ccc;
  border-radius: 50%;
  margin-left: 10rpx;
} 
.sendMessage button {
  float: right;
  text-align: center;
}
.sendMessage button::after {
  border: none;
}
.increased{
  width:100%;
  /* height: 150rpx; */
  padding: 40rpx 30rpx;
  background-color: #fff;
}
.increased .image{
   width: 100rpx;
   height: 100rpx;
   border: 3rpx solid #ccc;
   line-height: 100rpx;
   text-align: center;
   border-radius: 8rpx;
   font-size:35rpx;
}
@keyframes slidedown {
    from {
        transform: translateY(0);
    }
    to {
        transform: translateY(100%);
    }
}
.slidedown {
    animation: slidedown 0.5s linear ;
}
.slideup {
    animation: slideup 0.5s linear ;
}
@keyframes slideup {
    from {
        transform: translateY(100%);
    }
    to {
        transform: translateY(0);
    }
}