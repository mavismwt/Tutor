/* pages/mine/teacherAuth/teacherAuth.wxss */
.container {
  display: flex;
  padding: 0px;
  flex-direction: column;
}
.title {
  display: flex;
  margin: 20px 0px 0px 40px;
}

.card-view {
  display: flex;
  flex-direction: row;
  margin: 30px 0px 0px 40px;
}
.online-view {
  display: flex;
  flex-direction: row;
  margin: 10px 0px 0px 40px;
}
.detail {
  display: flex;
  flex-direction: column;
  padding: 50px 20px 20px 50px;
}
.online-auth {
  display: flex;
  flex-direction: column;
}
.input {
  margin: 5px;
  height: 30px;
  border: 1px solid #ececec;
}
.image {
  padding: 50px 0px 0px 50px;
  width: 200px;
  height: 150px;
}
.rule-view {
  display: flex;
  padding: 100px 20px 20px 100px;
  align-content: center;
}
.confirm {
  display: flex;
  bottom: 0px;
  width: 80px;
  height: 40px;
}
.icon {
  width: 30px;
  height: 30px;
}
.subtitle {
  margin: 5px 0px 0px 5px;
  font-size: 14px;
}
.help {
  margin: 5px 0px 0px 5px;
  height: 18px;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  border-radius: 2px;
  background-color: gray;
  color: white;
}
