/* component/moneylist/moneylist.wxss */
.basic-info {
  display: flex;
  background-color: #fff;
  flex-direction: column;
  padding: 10px;
  border-bottom: 1px solid #f5f5f5;
}

.line-view {
  display: inline-block;
  margin: 5px;
}
.title {
  display:inline-block;
  width: 80px;
}

.detail {
  display:inline-block;
  margin-left:10px;
}

.bottom-view {
  display: flex;
  flex-direction: row;
  width: 100vw;
  background-color: #fff;
  justify-content: flex-end;
  align-items: center;
}

.button {
  font-size:16px;
  color:#fff;
  padding:5px 10px 5px 10px;
  margin: 20px 20px 20px 0px;
  border-radius:5px;
  justify-content: flex-end;
}